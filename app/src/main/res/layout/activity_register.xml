<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".functions.loginandregister.register"
    android:padding="@dimen/sunhappy_padding">

        <ImageView
            android:id="@+id/img_Logo"
            android:layout_width="195dp"
            android:layout_height="102dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="59dp" />

        <TextView
            android:id="@+id/txt_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="ĐĂNG KÝ"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Tên người dùng"
            android:textColor="#000000"
            android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Register"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D6E0FB"
        android:fontFamily="@font/montserrat_light"
        android:hint="Tên người dùng"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="285dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:text="Email"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#000000"
            android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_Emaill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Username"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D6E0FB"
        android:fontFamily="@font/montserrat_light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="395dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Số điện thoại"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_PhoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_Emaill"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D6E0FB"
        android:fontFamily="@font/montserrat_light"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="505dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:text="Mật khẩu"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/montserrat_medium" />

    <EditText
        android:id="@+id/edt_Passwordd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_PhoneNum"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D6E0FB"
        android:drawableRight="@drawable/hidepass"
        android:fontFamily="@font/montserrat_light"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:longClickable="false"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="142dp"
        android:layout_marginTop="610dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Bạn đã có tài khoản?"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txt_LoginNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Đăng nhập ngay!"
            android:textColor="#EA4335"
            android:textSize="18dp"
            android:textStyle="italic" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_Signup"
        style="@style/normal_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#94CF5F5F"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="650dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="ĐĂNG KÝ"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="580dp" />


</RelativeLayout>