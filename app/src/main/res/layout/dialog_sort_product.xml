<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    android:layout_gravity="center">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lọc sản phẩm có size"
        style="@style/header"
        android:paddingTop="40dp"/>
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XL"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXL"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sắp xếp theo giá"
        style="@style/header"
        android:paddingTop="40dp"/>
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <RadioButton
            android:id="@+id/rad_Descending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ cao tới thấp"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_Ascending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ thấp tới cao"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_Apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="ÁP DỤNG"
        style="@style/normal_button_style"/>
</LinearLayout>