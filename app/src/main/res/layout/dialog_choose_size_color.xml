<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imv_ProductImageDialog"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_product_polo1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/txt_ProductNameDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ÁO POLO NAM PHONG CÁCH LỊCH LÃM NHƯNG VẪN TRẺ TRUNG"
                style="@style/normal_text"/>
            <TextView
                android:id="@+id/txt_ProductPriceDialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150000"
                style="@style/product_price_style"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÀU SẮC"
        style="@style/header"
        android:paddingTop="40dp"/>
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <RadioButton
            android:id="@+id/rad_White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trắng"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_Black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đen"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xanh"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_Red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đỏ"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIZE"
        style="@style/header"
        android:paddingTop="40dp"/>
    <RadioGroup
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <RadioButton
            android:id="@+id/rad_M"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="M"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_L"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="L"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_XL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XL"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
        <RadioButton
            android:id="@+id/rad_XXL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXL"
            android:button="@android:color/transparent"
            android:textAlignment="center"
            android:padding="20dp"
            android:background="@drawable/radio_option_selector"
            style="@style/small_text"
            android:layout_weight="1"
            android:layout_margin="4dp"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_AddToCartConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="THÊM VÀO GIỎ HÀNG"
        style="@style/normal_button_style"/>

</LinearLayout>