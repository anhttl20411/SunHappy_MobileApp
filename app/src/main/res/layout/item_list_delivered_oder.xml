<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:background="#E1DDDD"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/img_ProductImageCancelled"
            android:layout_margin="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_product_polo1"
            android:scaleType="fitCenter"
            tools:ignore="MissingConstraints">
        </ImageView>
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Áo polo nam cổ bẻ"
                style="@style/product_name_style"
                android:id="@+id/txt_ProductNameDelivered">
            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/product_description_style"
                    android:text="Phân loại:">

                </TextView>
                <TextView
                    android:id="@+id/txt_ProductClassifyDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/product_description_style"
                    android:text="NAVI"
                    android:layout_marginLeft="5dp">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/product_description_style"
                    android:text=",">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/product_description_style"
                    android:text="Size:"
                    android:layout_marginLeft="10dp">

                </TextView>
                <TextView
                    android:id="@+id/txt_ProductSizeDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/product_description_style"
                    android:text="XL (65 - 75kg)"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x">
                </TextView>
                <TextView
                    android:id="@+id/txt_ProductAmountCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thành tiền:"
                    style="@style/normal_text">
                </TextView>
                <TextView
                    style="@style/product_price_style"
                    android:id="@+id/txt_ProductPriceDelivering"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150000"
                    android:gravity="end"
                    android:paddingRight="10dp"
                    >
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end">
                <Button
                    android:id="@+id/btn_Feedback"
                    android:layout_width="wrap_content"
                    android:text="Feedback"
                    style="@style/small_button_style"
                    android:layout_gravity="end"
                    android:layout_marginRight="10dp">

                </Button><Button
                android:id="@+id/btn_Repurchase"
                android:layout_width="wrap_content"
                android:text="Mua lại"
                style="@style/small_button_style"
                android:layout_gravity="end"
                android:layout_marginRight="10dp">

            </Button>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>