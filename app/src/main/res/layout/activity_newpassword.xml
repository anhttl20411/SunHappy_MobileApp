<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.loginandregister.newpassword"
    android:padding="@dimen/sunhappy_padding"
    android:background="@color/white"
    >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="195dp"
            android:layout_height="102dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/txt_resetPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="TẠO MẬT KHẨU MỚI"
        android:textColor="#000000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Mật khẩu mới:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_ResetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_resetPassword"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D6E0FB"
        android:drawableRight="@drawable/hidepass"
        android:fontFamily="@font/montserrat_light"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:longClickable="false"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Nhập lại mật khẩu mới:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edt_ConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_ResetPass"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#D6E0FB"
        android:drawableRight="@drawable/hidepass"
        android:fontFamily="@font/montserrat_light"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:longClickable="false"
        android:padding="20dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_Login"
        style="@style/normal_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_ConfirmPass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#601E00"
        android:textSize="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="CẬP NHẬT MẬT KHẨU" />

</RelativeLayout>