<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".functions.payments.AddNewAddressActivity"
    android:orientation="vertical"

    android:padding="@dimen/sunhappy_padding">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        android:text="Liên hệ "
        style="@style/header"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/vien">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="10"
            >

            <EditText
                android:drawableEnd="@drawable/ic_next"
                android:id="@+id/edt_Address_Name"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Vui lòng nhập tên"
                android:layout_weight="6"
                android:paddingVertical="10dp"
                style="@style/normal_text"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:drawableEnd="@drawable/ic_next"

                android:id="@+id/edt_Address_SDT"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Vui lòng nhập SDT đúng định dạng"
                android:layout_weight="6"
                android:paddingVertical="10dp"
                style="@style/normal_text"
                />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/vien">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            style="@style/header"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:id="@+id/edt_Address_Tinh"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Tỉnh"
                android:drawableEnd="@drawable/ic_next"

                android:layout_weight="6"
                android:paddingVertical="10dp"
                style="@style/normal_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >


            <EditText
                android:drawableEnd="@drawable/ic_next"

                android:id="@+id/edt_Address_Huyen"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Huyện"
                android:layout_weight="6"
                android:paddingVertical="10dp"
                style="@style/normal_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:drawableEnd="@drawable/ic_next"

                android:id="@+id/edt_Address_Xa"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Xã"
                android:layout_weight="6"
                android:paddingVertical="10dp"
                style="@style/normal_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:drawableEnd="@drawable/ic_next"

                android:id="@+id/edt_Address_Duong"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="Đường"
                android:layout_weight="6"
                android:paddingVertical="10dp"
                style="@style/normal_text"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        android:text="Loại địa chỉ"
        style="@style/header" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:text="Nhà riêng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/normal_text">

            </RadioButton>
            <RadioButton
                android:text="Công ty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/normal_text">

            </RadioButton>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Đặt làm mặc định"
            android:layout_weight="9"
            android:layout_marginLeft="20dp"
            android:paddingVertical="10dp"
            style="@style/normal_text"

            />
        <CheckBox
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_AddressSave"
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:text="LƯU ĐỊA CHỈ"
            style="@style/normal_button_style"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>