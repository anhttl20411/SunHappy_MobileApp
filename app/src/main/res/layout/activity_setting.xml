<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.setting.SettingActivity"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    >
<TextView
    android:layout_width="match_parent"
    android:paddingVertical="10dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/montserrat"
    android:text="Tài khoản"
    android:background="#ECE7E7"
    android:textStyle="bold"
    android:textSize="16sp"
    android:padding="10dp"
    android:textColor="#CA701D"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/vien">
        <LinearLayout
            android:id="@+id/hosocuatui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Hồ sơ của tôi"
                android:layout_weight="8.5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                style="@style/normal_text"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="1.5"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/txt_thaydoimatkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                style="@style/normal_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Thay đổi mật khẩu"
                android:layout_weight="8.5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="1.5"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                style="@style/normal_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Địa chỉ"
                android:layout_weight="8.5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="1.5"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:text="Cài đặt"
        android:background="#ECE7E7"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#CA701D"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/vien">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                style="@style/normal_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Cài đặt riêng tư"
                android:layout_weight="8.5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="1.5"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                style="@style/normal_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Ngôn ngữ"
                android:layout_weight="8.5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="1.5"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                style="@style/normal_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Chat"
                android:layout_weight="8.5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="1.5"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
    </LinearLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintdagxuat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
    android:id="@+id/btn_logout"
    android:layout_marginTop="100dp"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:text="ĐĂNG XUẤT"
    style="@style/normal_button_style"
        app:layout_constraintRight_toRightOf="@id/constraintdagxuat"
        app:layout_constraintLeft_toLeftOf="@id/constraintdagxuat"
        app:layout_constraintTop_toTopOf="@id/constraintdagxuat"
    />
</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>