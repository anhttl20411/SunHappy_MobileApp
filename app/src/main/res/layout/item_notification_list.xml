<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/sunhappy_padding"
    android:background="#ECE7E7">

    <TextView
        android:textColor="#FF7A00"
        android:id="@+id/txt_notificationTitle"
        style="@style/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào anh em!" />
    <TextView
        android:id="@+id/txt_notificationContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã tin tưởng lựa chọn SunHappy! Chúc anh em sẽ hốt được nhiều đồ siêu rẻ, siêu chất, siêu chất lượng nhé!"
        style="@style/normal_text"/>
    <TextView
        android:id="@+id/txt_notificationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01-01-2022"
        style="@style/small_text"
        android:layout_gravity="end"/>

</LinearLayout>