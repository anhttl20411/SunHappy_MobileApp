<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        style="@style/text_top"
        android:gravity="center"
        android:text="Cảm ơn bạn đã đặt hàng tại SunHappy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6E0FB"
        android:backgroundTint="#D6E0FB">
        <Button
            android:id="@+id/btn_BackToHome"
            android:layout_weight="1"
            android:background="#D6E0FB"
            android:textColor="#FFD24C"
            android:text="Trang chủ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:layout_weight="1"
            android:background="#D6E0FB"
            android:textColor="#FFD24C"
            android:text="Xem đơn đã đặt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ViewDoneOrder">
        </Button>
    </LinearLayout>

</LinearLayout>