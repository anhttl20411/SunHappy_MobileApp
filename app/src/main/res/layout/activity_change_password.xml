<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.setting.SettingActivity"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:text="Mật khẩu cũ"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <EditText
                android:id="@+id/edt_oldpass"

                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="9"
                android:paddingVertical="10dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Mật khẩu mới:"
                android:layout_weight="5"
                android:layout_marginLeft="20dp"
                android:paddingVertical="10dp"
                />
            <EditText
                android:id="@+id/edt_newpass"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="end"
                android:layout_weight="9"
                android:paddingVertical="10dp"
                android:text=""
                android:src="@drawable/ic_next"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:text="Xác nhận mật khẩu mới:"
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:paddingVertical="10dp"
            />
        <EditText
            android:id="@+id/edt_confirmnewpass"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="9"
            android:paddingVertical="10dp"
            android:text=""
            android:src="@drawable/ic_next"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirmchangepass"
        android:layout_marginTop="60dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Xác nhận"
        style="@style/normal_button_style"
        android:layout_marginLeft="100dp"
        />


</LinearLayout>