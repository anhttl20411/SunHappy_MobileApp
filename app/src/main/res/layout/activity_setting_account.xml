<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.setting.SettingAccountActivity"
    style="@style/normal_text">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="183dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        android:background="#FFD24C"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/imv_avatar_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        app:cardCornerRadius="60dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imv_avatar"
            android:src="@drawable/img_avatar_user"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txt_thayavatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi ảnh đại diện"
        android:textColor="@color/white"
        style="@style/normal_text"
        android:background="@drawable/vien_trang"

        app:layout_constraintTop_toBottomOf="@id/imv_avatar_user"
        app:layout_constraintBottom_toBottomOf="@id/gl1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Tên"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:paddingVertical="10dp"
            style="@style/normal_text"
            />

        <TextView
            android:id="@+id/txt_oldname"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:hint="Pongpongwithlove"
            android:layout_height="40dp"
            style="@style/normal_text"
            android:layout_weight="6" />

        <ImageView
            android:id="@+id/imv_next1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/ln1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView

            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Tên đăng nhập"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <TextView
            android:id="@+id/txt_newusername"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="phong123"
            style="@style/normal_text"
            android:layout_weight="6" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/ln2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Ngày sinh"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="30/1/1997"
            style="@style/normal_text"
            android:layout_weight="6" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_next"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/ln3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Giới tính"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:hint="Nam"
            style="@style/normal_text"
            android:layout_weight="6" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_next"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@id/gl2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Số điện thoại"
            android:layout_weight="3"
            android:paddingVertical="10dp"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            />
        <TextView
            android:id="@+id/txt_phone"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:hint="0385144391"
            style="@style/normal_text"
            android:layout_height="40dp"
            android:layout_weight="6" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl3"
        app:layout_constraintTop_toBottomOf="@id/ln4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Email"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:paddingVertical="10dp"
            style="@style/normal_text"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            style="@style/normal_text"
            android:hint="pongpongwithlove@gmai.com"
            android:layout_weight="6" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:paddingVertical="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl3"
        app:layout_constraintTop_toBottomOf="@id/ln5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Mạng xã hội"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"

            android:layout_height="40dp"
            android:layout_weight="6" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_next"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>