<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".functions.setting.SettingAccountActivity"
    style="@style/normal_text">
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.55"/>
    <androidx.constraintlayout.widget.Guideline
        android:orientation="horizontal"
        android:id="@+id/gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.85"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        android:background="#FFD24C"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imv_avatar"

        app:layout_constraintVertical_bias="0.3"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        android:background="@drawable/vien_avatar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi ảnh đại diện"
        android:textColor="@color/white"
        android:background="@drawable/vien_trang"

        app:layout_constraintTop_toBottomOf="@id/imv_avatar"
        app:layout_constraintBottom_toBottomOf="@id/gl1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Tên"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            android:paddingVertical="10dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/ln1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Tên đăng nhập"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/ln2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Ngày sinh"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl2"
        app:layout_constraintTop_toBottomOf="@id/ln3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Giới tính"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.15"
        app:layout_constraintBottom_toBottomOf="@id/gl3"
        app:layout_constraintTop_toBottomOf="@id/gl2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Số điện thoại"
            android:layout_weight="8.5"
            android:paddingVertical="10dp"
            android:layout_marginLeft="20dp"

            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl3"
        app:layout_constraintTop_toBottomOf="@id/ln4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Email"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            android:paddingVertical="10dp"
            style="@style/normal_text"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:paddingVertical="10dp"
            android:layout_weight="1.5"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl3"
        app:layout_constraintTop_toBottomOf="@id/ln5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"

        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Mạng xã hội"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/gl3"
        app:layout_constraintTop_toBottomOf="@id/ln6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#ECE7E7"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="Thiết lập mật khẩu"
            android:layout_weight="8.5"
            android:layout_marginLeft="20dp"
            style="@style/normal_text"
            android:paddingVertical="10dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_weight="1.5"
            android:paddingVertical="10dp"/>
    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="LƯU"
        style="@style/normal_button_style"


        app:layout_constraintTop_toBottomOf="@id/gl3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>