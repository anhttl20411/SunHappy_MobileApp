<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".functions.loginandregister.otp"
    android:padding="@dimen/sunhappy_padding">
            <ImageView
            android:id="@+id/img_Logo"
            android:layout_width="195dp"
            android:layout_height="102dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_logo"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="59dp" />

        <TextView
            android:id="@+id/txt_Forgotpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="XÁC THỰC OTP"
            android:textColor="#000000"
            android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat"
        android:text="Chúng tôi đã gửi mã xác nhận tới số điện thoại của bạn."
        android:textSize="18dp">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Nhập mã OTP"
        android:textColor="#000000"
        android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            >
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="142dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_Help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Không nhận được mã?"
            android:textColor="#EA4335"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_ResentOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Gửi lại: 0:50"
            android:textColor="#EA4335"
            android:textSize="18dp"
            android:textStyle="italic" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_ConfirmOTP"
        style="@style/normal_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:backgroundTint="#94CF5F5F"
        android:fontFamily="@font/montserrat_bold"
        android:text="XÁC THỰC OTP"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="341dp" />




</RelativeLayout>