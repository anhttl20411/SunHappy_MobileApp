<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="normal_button_style">
        <item name="android:textColor">#601e00</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">#ffd24c</item>
        <item name="android:background">@drawable/style_normal_button</item>
    </style>
    <style name="product_name_style">
        <item name="android:textColor">@color/product_name_color</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="product_price_style">
        <item name="android:textColor">@color/product_price_color</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="product_description_style">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="header">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="normal_text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="small_text">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>